@using AlcoholLimit.Data
@inject AppState AppState

<nav class="navbar navbar-expand-lg navbar-dark bg-secondary rounded-pill">
    <div class="container-fluid">
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            @if (AppState.profile.ID != -1)
			{
                <div class="navbar-nav">
                    <a href="profile" class="nav-item nav-link">Profile</a>
                    <a href="settings" class="nav-item nav-link">Settings</a>
                </div>
                <div class="navbar-nav ms-auto">
                    <a href="#" class="nav-item nav-link" @onclick="logout">Logout</a>
                </div>
			}
			else
			{
                <div class="navbar-nav ms-auto">
                    <a href="login" class="nav-item nav-link">Login/Register</a>
                </div>
			}
        </div>
    </div>
</nav>

@code {
	protected override void OnInitialized()
	{
		AppState.OnChange += StateHasChanged;
	}

	public void Dispose()
	{
		AppState.OnChange -= StateHasChanged;
	}

	public void logout()
	{
		AppState.SetProfile();
	}
}